---
# build.yml: Create your host and group var files from this
- hosts: localhost
  gather_facts: no
  roles:
    - build
  vars:
    ntp_server_list:
      - 10.10.10.2
    dns_server_list:
      - 10.10.10.2
    dns_domain: sdn40r61.lab
    servers: 
      - { hostname: ns1.sdn40r61.lab,
          description: "name, ntp and dhcp server" ,
          inventory: nservers ,
          memory: 4194304 ,
          vcpu_num: 2 ,
          disk_GB: 20 ,
          image_qcow2: /tmp/centos7.qcow2 ,
          hypervisor: 192.168.1.113,
          ansible_host: 10.10.10.2 ,
          gateway: 10.10.10.1,
          ntpservers: local , 
          nameservers: [ 8.8.8.8 , 4.4.4.4 ] ,
          interfaces: [
          { name: eth0 ,
            bridge: core,
            ip: 10.10.10.2 ,
            netmask: 255.255.255.0 },
          { name: eth1 ,
            bridge: core,
            ip: 10.10.20.2 ,
            netmask: 255.255.255.0 }
          ]      
         }
      - { hostname: vsd1.sdn40r61.lab,
          description: "Nuage Stand-Alone VSD, management plane" ,
          inventory: vsd ,
          memory: 16777216 ,
          vcpu_num: 8 ,
          disk_GB: 120 ,
          image_qcow2: /tmp/vsd40r61.qcow2 ,
          hypervisor: 192.168.1.113,
          ansible_host: 10.10.10.10 ,
          gateway: 10.10.10.1,
          interfaces: [
          { name: eth0 ,
            bridge: core,
            ip: 10.10.10.10 ,
            netmask: 255.255.255.0 },
          { name: eth1 ,
            bridge: core,
            ip: 10.10.20.10 ,
            netmask: 255.255.255.0 }
          ]      
         }
    vsc_controllers:
      - { hostname: vsc1.sdn40r61.lab,
          description: "Nuage VSC - SDN controller" ,
          inventory: vsc ,
          image_qcow2: /tmp/vsc40r61.qcow2 ,
          hypervisor: 192.168.1.113,
          ansible_host: 10.10.10.11 ,
          gateway: 10.10.10.1,
          interfaces: [
          { name: control ,
            bridge: core,
            ip: 10.10.10.11 ,
            netmask: 255.255.255.0 },
          { name: bof ,
            bridge: core ,
            ip: 10.10.20.11 ,
            netmask: 255.255.255.0 }
          ]      
         }
      - { hostname: vsc2.sdn40r61.lab,
          description: "Nuage VSC - SDN controller" ,
          inventory: vsc ,
          image_qcow2: /tmp/vsc40r61.qcow2 ,
          hypervisor: 192.168.1.113,
          ansible_host: 10.10.10.12 ,
          gateway: 10.10.10.1,
          interfaces: [
          { name: control ,
            bridge: core,
            ip: 10.10.10.12 ,
            netmask: 255.255.255.0 },
          { name: control ,
            bridge: bof ,
            ip: 10.10.20.12 ,
            netmask: 255.255.255.0 }
          ]      
         }
    ssh_key:
    - "ssh-rsa  root@box01.nuage.lab"
    - "ssh-rsa  mauricio.rojas@nuagenetworks.net"
